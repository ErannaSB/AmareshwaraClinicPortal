<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="navbar navbar-expand-lg  bg-primary  navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Clinic Management Portal", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", style = "color: white" })
            </div>
            <div class="navbar-collapse collapse">

                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Admin"))
                    {
                        <ul class="nav navbar-nav navbar-left">
                            <li>@Html.ActionLink("Patients DashBoard", "Index", "Patients", new { area = "" }, new { style = "color: white;font-weight: bold" })</li>
                            <li>@Html.ActionLink("Medicine DashBoard", "Index", "Medicines", new { area = "" }, new { style = "color: white;font-weight: bold" })</li>
                        </ul>

                        <ul class="nav navbar-nav navbar-right text-dark ">
                            <li><a style = "color:white;font-weight:bold">Hello @User.Identity.Name</a></li>
                            <li>@Html.ActionLink("Logout", "Logout", "Account", new { area = "" }, new { style = "color: white;font-weight: bold" })</li>
                        </ul>
                    }
                    else
                    {
                        <ul class="nav navbar-nav navbar-right text-dark ">
                            <li ><a style = "color:white;font-weight:bold">Hello @User.Identity.Name</a></li>
                            <li>@Html.ActionLink("Logout", "Logout", "Account", new { area = "" }, new { style = "color: white;font-weight: bold" })</li>
                        </ul>}
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right text-dark ">
                        <li>@Html.ActionLink("Login", "Login", "Account", new { area = "" }, new { style = "color: white;font-weight: bold" })</li>
                        <li>@Html.ActionLink("Register", "Register", "Account", new { area = "" }, new { style = "color: white;font-weight: bold" }) </li>
                    </ul>
                }

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
